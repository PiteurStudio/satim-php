{
    "name": "piteurstudio/php-satim",
    "description": "PHP package to interact with Satim.dz API",
    "keywords": [
        "PiteurStudio",
        "php-satim",
        "satim.dz",
        "Algeria"
    ],
    "homepage": "https://github.com/piteurstudio/php-satim",
    "license": "MIT",
    "authors": [
        {
            "name": "Nassim",
            "email": "mb.nassim@piteur-studio.dz",
            "homepage": "https://www.piteur-studio.dz"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PiteurStudio\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PiteurStudio\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
